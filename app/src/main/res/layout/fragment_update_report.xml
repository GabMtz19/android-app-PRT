<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".controller.fragment.UpdateReportFragment"
android:orientation="vertical"
android:padding="8dp">

<TextView
    android:id="@+id/report_title_info"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="sans-serif-black"
    android:text="Report"
    android:textSize="32sp"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?android:attr/selectableItemBackground"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="20dp"
        android:padding="6dp"
        app:cardElevation="1dp"
        >

        <ImageView
            android:id="@+id/report_img_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/button_background_border"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_black_no_image"
            android:cropToPadding="true" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/report_date_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:drawableStartCompat="@drawable/ic_gray_calendar" />

        <TextView
            android:id="@+id/report_time_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:drawableStartCompat="@drawable/ic_gray_clock" />
        <TextView
            android:id="@+id/report_category_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:drawablePadding="10dp"
            android:textSize="20sp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:drawableStartCompat="@drawable/ic_gray_inbox" />

    </LinearLayout>

</LinearLayout>
    <TextView
        android:id="@+id/report_location_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location"
        android:drawablePadding="10dp"
        android:textSize="20sp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        app:drawableStartCompat="@drawable/ic_gray_map_pin" />

    <TextView
        android:id="@+id/report_description_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Info"
        android:drawablePadding="10dp"
        android:textSize="20sp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        app:drawableStartCompat="@drawable/ic_gray_info" />

    <ImageButton
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/button_background_border"
        android:src="@drawable/ic_purple_alert_triangle"
        android:layout_margin="4dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_border"
            android:src="@drawable/ic_blue_trash_alt"
            app:tint="@color/red" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_border"
            android:src="@drawable/ic_blue_archive" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_border"
            android:src="@drawable/ic_green_check" />

    </LinearLayout>

</LinearLayout>
